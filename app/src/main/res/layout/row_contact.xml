<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/row_image_container_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="23dp"
            app:cardPreventCornerOverlap="false">
        <ImageView
                android:id="@+id/row_contact_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_centerVertical="true"
        />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/row_contact_name_tv"
            android:text="Deepak Prasad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/row_contact_msg_btn"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/row_image_container_card"
            android:layout_centerVertical="true"
            android:textColor="?android:attr/textColorPrimary"
    />

    <ImageButton
            android:id="@+id/row_contact_msg_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_message"
            android:layout_toLeftOf="@id/row_contact_call_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
    />

    <ImageButton
            android:id="@+id/row_contact_call_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_call_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
    />
</RelativeLayout>